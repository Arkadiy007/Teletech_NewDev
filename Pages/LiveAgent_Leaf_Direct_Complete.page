                                    browserName = FIREFOX;
                                }
                                if(isSafari = Object.prototype.toString.call(window.HTMLElement).indexOf('Constructor') > 0) {
                                    browserName = SAFARI;
                                }
                                if(isChrome = !!window.chrome && !isOpera) {
                                    browserName = CHROME;
                                }
                                if(isIE = /*@cc_on!@*/false || !!document.documentMode) {
                                    browserName = IE;
                                }
                            }

                            getCurrentBrowser();

